<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intro.intro.EditTask.TaskScreenActivity"
    android:background="@color/splah_color"

    >

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="33dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:background="@color/close_color"
        android:src="@drawable/ic_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="55dp"
        android:padding="8dp"
        />
    <ImageView
        android:id="@+id/iv_edit_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_close"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_task_check"
        />
    <TextView
        android:id="@+id/tv_edit_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_edit_check"
        app:layout_constraintBottom_toBottomOf="@id/iv_edit_check"
        android:text="do home work"
        android:textColor="@color/white2"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@id/iv_edit_edit"
        android:layout_marginStart="60dp"
        />
    <ImageView
        android:id="@+id/iv_edit_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_edit_title"
        app:layout_constraintTop_toTopOf="@id/tv_edit_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_edit_title"
        android:src="@drawable/ic_edit"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="15dp"
        android:padding="12dp"
        />
    <TextView
        android:id="@+id/tv_edit_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="do home work"
        android:textColor="@color/gery"
        android:textSize="20sp"
        android:layout_marginEnd="24dp"
        />
    <ImageView
        android:id="@+id/iv_edit_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_description"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_clock_task"
        />
    <TextView
        android:id="@+id/tv_edit_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_edit_clock"
        app:layout_constraintBottom_toBottomOf="@id/iv_edit_clock"
        android:text="Time : "
        android:textColor="@color/white2"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@id/iv_edit_edit"
        android:layout_marginStart="60dp"
        />
    <TextView
        android:id="@+id/tv_edit_change_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_edit_time"
        app:layout_constraintBottom_toBottomOf="@id/tv_edit_time"
        tools:text="Today At 16:45"
        android:background="@drawable/edit_task_shape"
        android:paddingHorizontal="8dp"
        android:paddingVertical="15dp"
        android:textColor="@color/white2"
        android:textSize="15dp"
        android:layout_marginEnd="24dp"
        />
    <ImageView
        android:id="@+id/iv_edit_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_edit_clock"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_calender"
        />
    <TextView
        android:id="@+id/tv_edit_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_edit_category"
        app:layout_constraintBottom_toBottomOf="@id/iv_edit_category"
        android:text="Category : "
        android:textColor="@color/white2"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@id/iv_edit_edit"
        android:layout_marginStart="60dp"
        />
    <TextView
        android:id="@+id/tv_edit_change_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_edit_category"
        app:layout_constraintBottom_toBottomOf="@id/tv_edit_category"
        android:text="University"
        android:background="@drawable/edit_task_shape"
        android:paddingHorizontal="8dp"
        android:paddingVertical="15dp"
        android:textColor="@color/white2"
        android:textSize="15dp"
        android:layout_marginEnd="24dp"
        />
    <ImageView
        android:id="@+id/iv_edit_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_edit_category"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_pri"
        />
    <TextView
        android:id="@+id/tv_edit_priority"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_edit_priority"
        app:layout_constraintBottom_toBottomOf="@id/iv_edit_priority"
        android:text="Priorty : "
        android:textColor="@color/white2"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@id/iv_edit_edit"
        android:layout_marginStart="60dp"
        />
    <TextView
        android:id="@+id/tv_edit_change_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_edit_priority"
        app:layout_constraintBottom_toBottomOf="@id/tv_edit_priority"
        android:text="Default"
        android:background="@drawable/edit_task_shape"
        android:paddingHorizontal="8dp"
        android:paddingVertical="15dp"
        android:textColor="@color/white2"
        android:textSize="15dp"
        android:layout_marginEnd="24dp"
        />
    <ImageView
        android:id="@+id/iv_edit_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_edit_priority"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_delete"
        />
    <TextView
        android:id="@+id/tv_edit_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_edit_delete"
        app:layout_constraintBottom_toBottomOf="@id/iv_edit_delete"
        android:text="Delete Task"
        android:textColor="@color/red"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@id/iv_edit_edit"
        android:layout_marginStart="60dp"
        />

    <Button
        android:id="@+id/btn_edit_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/intro_btn_next"
        android:text="Edit Task"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>