<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bottom_bar_color"
    android:layout_marginTop="24dp"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="18dp"
    >
    <ImageView
        android:id="@+id/iv_task_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_task_check"
        android:layout_marginStart="8dp"
        android:clickable="true"
        app:layout_constraintEnd_toStartOf="@id/tv_task_title"
        android:padding="5dp"
        />
    <ImageView
        android:id="@+id/iv_task_check_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_task_complete"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/tv_task_title"
        android:padding="5dp"
        />
    <TextView
        android:id="@+id/tv_task_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Do Math Homework"
        android:textColor="@color/white2"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/iv_task_check"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@id/tv_task_priority"
        />
    <TextView
        android:id="@+id/tv_task_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Today At 16:45"
        app:layout_constraintTop_toBottomOf="@id/tv_task_title"
        app:layout_constraintStart_toEndOf="@id/iv_task_check"
        android:textSize="15sp"
        android:textColor="@color/gery"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toStartOf="@id/tv_task_priority"
        />
    <TextView
        android:id="@+id/tv_task_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/priority_shape"
        android:text="2"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/ic_pri"
        app:layout_constraintStart_toEndOf="@id/tv_task_date"
        android:drawablePadding="8dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>